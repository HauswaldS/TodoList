{% extends 'layout.html.twig' %}
{% block title %} Login {% endblock %}
{% block content %}
{% if error %}
    <div class="alert alert-danger">   
        <strong>Login failed </strong> {{ error }}
    </div>
{% endif %}
<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <form class="form-signin form-horizontal" action="{{ path('login_check')}}" method="post">
            <fieldset>
                <legend>{{ block('title')}}</legend>
                <div class="form-group">
                    <label class="col-xs-2 control-label"   for="_username">Username</label>
                    <div class="col-xs-10">
                        <input type="text" name="_username" value="{{last_username}}" class="form-control" required autofocus>
                    </div>
                </div><!--FormGroup Username-->
                <div class="form-group">
                    <label for="_password" class="col-xs-2  control-label">Password</label>
                    <div class="col-xs-10">
                        <input type="password" name="_password"     class="form-control" required>
                    </div>
                </div><!-- FormGroup Password-->
                <div class="form-group">
                    <div class="col-xs-6 col-xs-offset-3">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-user"> Login</span></button>
                    </div>
                </div>
            </fieldset>        
        </form>
    </div>
</div>
{% endblock %}